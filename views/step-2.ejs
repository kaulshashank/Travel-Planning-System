<% include ./partials/header %>
<div class="ui main text container">
  <div class="ui huge header"> Select a train </div>
  <div class="ui top attached segment">
      <form action="/step-2" method="post" class = "ui form">
        <table class="ui celled table">
          <thead>
            <tr>
              <th></th>
              <th>Location</th>
            </tr>
          </thead>
          <tbody>
            <% for(var i=0; i < dat.results.length; i++) { %>
              <tr>
                <td class="collapsing">
                  <div class="ui fitted slider checkbox">
                    <input name="selected_place" value="<%= dat.results[i].id %>" type="checkbox"> <label></label>
                  </div>
                </td>
                <td>
                    <%= dat.results[i].name %> <br /> <%= dat.results[i].formatted_address %>
                </td>
              </tr>
            <% } %>
          </tbody>
        <table>
        <div class="ui right floated small primary labeled icon button" onClick="javascript:this.parentNode.submit();">
          Continue >
        </div>
      </form>
  </div>
</div>

<% include ./partials/footer %>
